{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "@assets/*": ["src/@assets/*"],
      "@components/*": ["src/@components/*"],
      "@config/*": ["src/@config/*"],
      "@constants/*": ["src/@constants/*"],
      "@store/*": ["src/@store/*"],
      "@store": ["src/@store/index"],
      "@services/*": ["src/@services/*"],
      "types/*": ["src/types/*"],
      "@utils/*": ["src/@utils/*"]
    },
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
